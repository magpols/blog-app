<div class="container">
    <div class="row">
        <% posts.forEach(post => { %>
        <div class="col-12 col-md-5 post-box mx-auto">
            <h3><%= post.title %></h3>
            <% if (post.content.length >= 100) { %>
                <p><%= post.content.substring(0, 100) + "..." %>
                    <a href="/posts/<%= post._id %>">Read More</a></p>
            <% } else { %>
                <p><%= post.content %></p>
            <% } %>	
        </div> 
        <% }) %>
    </div>      
</div>