<%- include('partials/top') -%>

<div class="container">
    <div class="container">
        <h1>Home</h1>
        <h5><%= homeStartingContent %></h5>
    </div>
	<br>
    <div class="container">
        <div class="row">
            <% posts.forEach(post => { %>
            <div class="col-12 col-md-5 post-box mx-auto">
                <h3><%= post.title %></h3>
                <% if (post.content.length >= 100) { %>
                    <p><%= post.content.substring(0, 100) + "..." %>
                        <a href="/post/<%= post._id %>">Read More</a></p>
                <% } else { %>
                    <p><%= post.content %></p>
                <% } %>	
            </div> 
            <% }) %>
        </div>      
    </div>
</div>

<%- include('partials/bottom'); -%>
